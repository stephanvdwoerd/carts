pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

⧗ = 0
beat = 120

function _update60()
    if (⧗ % beat == 0) sfx(0)
    if (⧗ % (beat / 4) == 0) sfx(1)

    if (btn(⬆️)) beat -= 1
    if (btn(⬇️)) beat += 1

    -- advance
    ⧗ += 1
end

function _draw()
    cls()
end




